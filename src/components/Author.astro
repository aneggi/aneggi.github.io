---
import { Image } from 'astro:assets';
import Ava from '@src/assets/img/alessandro_a.jpg';
import { getProfile } from '@src/data/profile';
import { DEFAULT_LANG, type Lang } from '@src/i18n/config';

type PicSize = 'sm' | 'md' | 'lg';
interface Props {
	picSize: PicSize;
  lang?: Lang;
}
const { picSize, lang = DEFAULT_LANG } = Astro.props as Props;
const profile = getProfile(lang);
---

<div class='flex gap-4 items-center leading-tight not-prose'>
	<a
		href={profile.social.github}
		target='_blank'
		rel='noopener noreferrer'
		class:list={[
			'rounded-full overflow-hidden shrink-0',
			{ 'w-12 h-12': picSize === 'sm' },
			{ 'w-[70px] h-[70px]': picSize === 'md' },
			{ 'w-[90px] h-[90px]': picSize === 'lg' }
		]}
	>
		<Image src={Ava} alt={profile.name} />
	</a>
	<div>
		<div>
			<a
				href={profile.social.github}
				class='block font-bold text-inherit hover:text-[var(--link-color)]'
				target='_blank'
				rel='noopener noreferrer'
			>
				{profile.name}
			</a>
		</div>
		<small class='avatar__subtitle'>{profile.headline}</small>
	</div>
</div>
