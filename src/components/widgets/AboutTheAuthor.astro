---
import Author from '../Author.astro';
import { getProfile } from '@src/data/profile';
import { getUiCopy } from '@src/i18n/ui';
import { DEFAULT_LANG, type Lang } from '@src/i18n/config';

interface Props {
  lang?: Lang;
}

const { lang = DEFAULT_LANG } = Astro.props as Props;
const profile = getProfile(lang);
const copy = getUiCopy(lang);
---

<div
	class='about-the-author py-4 border-b'
>
	<h3 class='font-extrabold uppercase mb-4 text-sm'>{copy.aboutAuthor.title}</h3>
	<Author picSize='md' lang={lang} />
	<div class='author-desc text-[.825rem] my-4'>
		<p class='mb-3'>
			{profile.name} — {copy.aboutAuthor.summary}
		</p>
		<p>
      {copy.aboutAuthor.contact} <a class="underline" href={`mailto:${profile.email}`}>{profile.email}</a> · {copy.aboutAuthor.orcidLabel} <a class="underline" href={profile.orcid} target="_blank" rel="noopener noreferrer">ORCID</a>.
    </p>
	</div>
</div>
