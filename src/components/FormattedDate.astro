---
import { DEFAULT_LANG, type Lang } from '@src/i18n/config';

interface Props {
	date: Date;
  lang?: Lang;
}

const { date, lang = DEFAULT_LANG } = Astro.props as Props;
const locale = lang === 'it' ? 'it-IT' : 'en-US';
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: '2-digit',
			timeZone: 'UTC',
		})
	}
</time>
