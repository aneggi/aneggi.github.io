---
import BaseHead from './components/BaseHead.astro';
import Header from './components/Header.astro';
import Footer from './components/Footer.astro';
import { DEFAULT_LANG, type Lang } from '@src/i18n/config';
const { title, description, image, lang = DEFAULT_LANG } = Astro.props as { title: string; description: string; image?: string; lang?: Lang };
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>
	<body
		class="bg-white dark:bg-zinc-900 dark:text-zinc-100 pt-16 sm:pt-0"
	>
		<Header lang={lang} currentPath={Astro.url.pathname}/>
		<div class='py-8 min-h-[calc(100vh-160px)]'>
			<slot />
		</div>
		<Footer lang={lang} />
	</body>
</html>
